<log4net>
  <root>
    <!-- Select one of these options
      ALL
      DEBUG
      INFO
      WARN
      ERROR
      FATAL
      OFF
    -->
    <level value="ALL" />
    <appender-ref ref="console" />
    <appender-ref ref="file" />
    <appender-ref ref="NotifyAppender" />
  </root>
  
  <appender name="NotifyAppender" type="NavigatorMachine.Defines.NotifyAppender" >
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date{HH:mm:ss.fff}],%-5level,%message%newline" />
    </layout>
  </appender>
  
  <appender name="console" type="log4net.Appender.ConsoleAppender">
    <layout type="log4net.Layout.PatternLayout">
      <!--<conversionPattern value="[%date{HH:mm:ss.fff}],%logger,%level,%message%newline" />-->
      <conversionPattern value="[%date{HH:mm:ss.fff}],%-5level,%message%newline" />
    </layout>
  </appender>
  
  <appender name="file" type="log4net.Appender.RollingFileAppender">
    <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
    <file value="D:/PowerlogicsBaThien/History/LOG_file/"/>
    <datePattern value="yyyy-MM-dd'.txt'" />
    <staticLogFileName value="false" />
    <appendToFile value="true" />
    <rollingStyle value="Composite" />
    <maxSizeRollBackups value="-1" />
    <maximumFileSize value="10MB" />
    <layout type="log4net.Layout.PatternLayout">
      <conversionPattern value="[%date{HH:mm:ss.fff}],%-6logger,%-5level,%message%newline" />
    </layout>
  </appender>
  
</log4net>